{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
		<script src='https://www.google.com/recaptcha/api.js'></script>
	</head>
{% endblock %}

	<body class="{{body_class}} {% for hero in post.get_field('hero') %}{% if hero.minimal_hero %}minimal-hero{% endif %}{% endfor %}" data-template="base.twig">  {# minimal-hero #}
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KLHDPK5" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		{% if options.alert_title %}
			<div class="alert-wrapper">
				<div class="alert">
					<div class="alert__content">
						<div class="alert__header">{{ options.alert_title }}</div>
						<div class="alert__subheader">{{ options.alert_subtitle }}</div>
						<a class="alert__button btn" href="{{ options.alert_button_url }}">{{ options.alert_button_text }}</a>
					</div>
				</div>
			</div>
		{% endif %}
		
		<header>
			<a href="/"><img class="logo-primary" src="{{ theme.link }}/assets/src/img/mark_logo.png'" /></a>
			{% include 'nav.twig' %}
		</header>

		<main class="site-main">
			{% block content %}
				Sorry, no content
			{% endblock %}

			<div class="container">
				<div class="row">
					<div class="col" style="text-align: center;">
						<div class="cta-connect">
							<p class="cta-connect__title">Sign-up for our newsletter <a href="http://eepurl.com/dFoApf" target="_blank"><i class="fas fa-envelope-open-text"></i></a> &nbsp; Connect with us <a href="https://www.facebook.com/kingscommunitych/" target="_blank"><i class="fab fa-facebook-f"></i></a> <a href="https://www.instagram.com/kingscommunitych/" target="_blank"><i class="fab fa-instagram"></i></a></p>
						</div>
					</div>
				</div>
			</div>

			<div class="map">
				<div class="map-card">
					<div class="map-card__title">Join Us</div>
					<div class="map-card__subtitle">Sundays at 10:00am</div>
					<div class="map-card__text">
						{{ options.church_address }}
					</div>
					<a href="https://goo.gl/maps/7FirbH3vp2hxreiKA" class="map-card__button btn btn-secondary">Get Directions</a>
				</div>
				<div id="map" class="u-abs-full bg-img bg-map" data-lattitude="29.718980" data-longitude="-98.152760"></div>
			</div>
		</main>

		{% block footer %}
			<footer class="site-footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
