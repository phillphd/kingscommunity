{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
		<script src='https://www.google.com/recaptcha/api.js'></script>
	</head>
{% endblock %}

	<body class="{{body_class}} {% for hero in post.get_field('hero') %}{% if hero.minimal_hero %}minimal-hero{% endif %}{% endfor %}" data-template="base.twig">  {# minimal-hero #}
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KLHDPK5" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		{% if options.alert_title %}
			<div class="alert-wrapper">
				<div class="alert">
					<div class="alert__content">
						<div class="alert__header">{{ options.alert_title }}</div>
						<div class="alert__subheader">{{ options.alert_subtitle }}</div>
						<a class="alert__button btn" href="{{ options.alert_button_url }}">{{ options.alert_button_text }}</a>
					</div>
				</div>
			</div>
		{% endif %}
		
		<header>
			<a href="/"><img class="logo-primary" src="{{ theme.link }}/assets/src/img/mark_logo.png'" /></a>
			{% include 'nav.twig' %}
		</header>

		<main class="site-main">
			{% block content %}
				Sorry, no content
			{% endblock %}

			<div class="map">
				<div class="map-card">
					<div class="map-card__title">Join Us</div>
					<div class="map-card__subtitle">Sundays at 10:00am</div>
					<div class="map-card__text">
						Morningside Elementary<br />
						{{ options.church_address }}
					</div>
					<a href="https://www.google.com/maps/dir/29.6189952,-98.2491136/Morningside+Elementary+3855+Morningside+Dr,+New+Braunfels,+TX+78132/@29.6409071,-98.240166,13z/data=!3m1!4b1!4m9!4m8!1m1!4e1!1m5!1m1!1s0x865c96446a33a95b:0xc15395e04b9db72a!2m2!1d-98.1614264!2d29.6587241" class="map-card__button btn btn-secondary">Get Directions</a>
				</div>
				<div id="map" class="u-abs-full bg-img bg-map" data-lattitude="29.658754" data-longitude="-98.161567"></div>
			</div>
		</main>

		{% block footer %}
			<footer class="site-footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
