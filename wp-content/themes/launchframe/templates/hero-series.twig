{% block site_nav %}

{% if posts %}
    {% for post in posts|slice(0, 1) %}
        <div class="hero__slide">
            <div class="u-abs-full bg-img" style="background-image: url('{{ fn('imgix', post.get_field('series_artwork')) }}');"></div>
            <div class="hero__content hero-content">
                <h1 class="hero-content__title">{{ post.title }}</h1>
                <p class="hero-content__subtitle">{{ hero.subtitle }}</p>
            </div>
            {% if hero.button_text %}
                <div class="hero-content__button-wrapper">
                    {% if hero.button_text %}
                        <a class="hero-content__button" href="{{ post.link }}">{{ hero.button_text }}</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    {% endfor %}
{% endif %}

{% endblock %}