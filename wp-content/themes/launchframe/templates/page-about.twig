{% extends "base.twig" %}

{% block content %}
	
	{% for hero in post.get_field('hero') %}
		<div class="series-archive-header">
			<div class="series-archive-header__wrapper">
				<h1 class="series-archive-header__header">{{ hero.title }}</h1>
				<p class="series-archive-header__subheader">{{ hero.subtitle }}</p>
			</div>
		</div>
		<div class="hero">
			<div class="hero__slide hero__slide--series">
	            <div class="u-abs-full bg-img" style="background-image: url('{{ fn('imgix', hero.bg_image, 1400) }}');"></div>
				{# <a class="hero-content__button hero-content__button--play video-modal-trigger" href="#!" data-vimeoid="RFaIkp_m6HU">Play Video</a> #}
	        </div>
		</div>
	{% endfor %}

	<section>
		<div class="container">
			{% include '_partial-flex-fields.twig' %}
		</div>
	</section>
	
	<div class="map">
		<div class="map-card">
			<div class="map-card__title">Join Us</div>
			<div class="map-card__subtitle">Sundays at 8:30a, 9:50a and 11:10a</div>
			<div class="map-card__text">
				River Oaks Community Churchâ€¨<br />
				{{ options.church_address }}
