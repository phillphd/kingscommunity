{% include '_partial-newsletter-signup.twig' %}

<div class="mission-bar">
	<ul class="mission-bar__list">
		<li class="mission-bar__item">
			Lives
			<span>
				Redeemed.
			</span>
		</li>
		<li class="mission-bar__item">
			Families
			<span>
				Transformed.
			</span>
		</li>
		<li class="mission-bar__item">
			Communities
			<span>
				Blessed.
			</span>
		</li>
		<li class="mission-bar__item">
			More Churches
			<span>
				Planted.
			</span>
		</li>
	</ul>
</div>

<footer>
	<div class="container vp-xs-top-4 vp-xs-bottom-4 vp-md-bottom-7">
		<div class="row">
			<div class="col-xs-12" style="overflow: hidden;">
				<div class="footer-menu-wrapper">
					<div class="footer-menu footer-menu--wrap">
						{% if footerNav1.get_items %}
							<h4 class="footer-menu__title">
								{{footerNav1.title}}
							</h4>
							<ul class="footer-menu__list">
								{% for item in footerNav1.get_items %}
									<li class="{{item.classes | join(' ')}}"><a href="{{item.get_link}}">{{item.title}}</a></li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>
					<div class="footer-menu footer-menu--wrap">
						{% if footerNav2.get_items %}
							<h4 class="footer-menu__title">
								{{footerNav2.title}}
							</h4>
							<ul class="footer-menu__list">
								{% for item in footerNav2.get_items %}
									<li class="{{item.classes | join(' ')}}"><a href="{{item.get_link}}">{{item.title}}</a></li>
								{% endfor %}
							</ul>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="base-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="base">
						<div class="base__mark">
							<img src="{{ theme.link }}/assets/src/img/mark_footer.png'" />
						</div>
						<div class="base__copy">
							&copy; {{"now"|date('Y')}} King's Community Church. All Rights Reserved.
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
